<h1>Edit Figure></h1>

<form action="/figures/<%=@figure.id%>" method="POST">
    <input type="hidden" name="_method" value="patch">

    <label>Name:</label>

    <input id="figure_name" type="text" name="figure[name]" value= "<%= @figure.name %>">
    <br>



  <label>Edit Landmarks:</label><br>


    <label>Edit Landmark:</label>
    <br>
    <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" id="<%=landmark.id %>" name="figure[landmark_ids][]" value="<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark)%>>
    <% end %>
    <br>

    <label>Add a landmark:</label>
    <input type="text" id="new_landmark" name="landmark[name]">

    <label>Edit Titles:</label>
    <br>
    <% Title.all.each do |title| %>
    <%= title.name %>
    <input type="checbox" id="<%=title.id %>"  name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>>
    <% end %>
    <br>

    <h4>Add a title:</h4>
    <input type="text" id="new_title" name="title[name]">
    <br>

    <input type="submit" name="submit" value="Edit Figure">
</form>
